pipeline {
    agent any

    stages {
        stage('cred') {
            steps {
	      scripts {
                echo 'Hello World'
		
		withCredentials([usernamePassword(credentialsId: 'TMcreds', passwordVariable: 'PWD', usernameVariable: 'USER')]) {
		println "${USER}"
		sh '''#!/bin/bash -l
               echo $PWD
      }         '''
}
		
            }
        }
    }
}
