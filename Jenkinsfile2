pipeline {
    agent any
    parameters {
        string(name: 'Validate Threats (Very High, High)', description: 'To validate ThreatModeler Threats')
        }
    stages {
        stage('Building Pilot App') {
            steps {
                sh 'exit 0'
            }
        }
        stage('Threat Model Approval Validation') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {    
                sh '''#!/bin/bash -l
                response=$(python3 TM.py "nikhsehgal@deloitte.com" "Containers@765" "TM pipeline")
                echo $response
                
                successful="ThreatModeler Validation Successful."
                
                 if [[ $response == $successful ]]
                 then
                    exit 0
                 else 
                    exit 1
                 fi
                '''
                }
            }
        }
        stage('Threat Model Threats Validation')
        when {
                expression { 
                   return params.Validate Threats (Very High, High) == 'true'
                  // curl script api call threat
               
               }
        
        
        stage('Push') {
            steps {
                sh 'exit 0'
            }
        }
    }
}
