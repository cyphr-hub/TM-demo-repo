pipeline {
	agent any
	stages {


steps {
			withCredentials([usernamePassword(credentialsId: 'TMcreds', passwordVariable: 'PWD', usernameVariable: 'USER')]) {
	       catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') { 
	         
                            
                sh '''#!/bin/bash -l
                echo ${USER}
                echo ${PWD}'''       
                }
                }
                }
                }
                }
